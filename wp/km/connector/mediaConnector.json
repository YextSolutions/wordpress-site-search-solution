{
  "$id": "wp_mediaConnector",
  "$schema": "https://schema.yext.com/config/km/connector/v2",
  "displayName": "WordPress Media Connector",
  "entityType": "wp_media",
  "source": {
    "sourceConfig": {
      "apiPullConfig": {
        "requestType": "GET",
        "url": "${{wordpressFullDomain}}/wp-json/wp/v2/media?_embed",
        "paginationControl": {
          "pageBasedPagination": {
            "pageKey": "page",
            "pageStartValue": 1,
            "totalPages": {
              "key": "X-WP-TotalPages",
              "inHeader": true
            },
            "limitKey": "X-WP-Total",
            "limitValue": 0
          }
        },
        "headers": {},
        "queryParams": {},
        "dataFormat": "JSON"
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "Entity Container",
      "path": "[]"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Entity ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Name",
        "path": "title.rendered"
      },
      {
        "type": "JSON",
        "header": "Date Posted (raw)",
        "path": "date"
      },
      {
        "type": "JSON",
        "header": "Date Modified (raw)",
        "path": "modified"
      },
      {
        "type": "JSON",
        "header": "Caption",
        "path": "caption.rendered"
      },
      {
        "type": "JSON",
        "header": "Alternative Caption",
        "path": "alt_text"
      },
      {
        "type": "JSON",
        "header": "Width",
        "path": "media_details.width"
      },
      {
        "type": "JSON",
        "header": "Height",
        "path": "media_details.height"
      },
      {
        "type": "JSON",
        "header": "Source URL",
        "path": "source_url"
      },
      {
        "type": "JSON",
        "header": "Author",
        "path": "_embedded.author[].name"
      },
      {
        "type": "JSON",
        "header": "Author Landing Page",
        "path": "_embedded.author[].link"
      },
      {
        "type": "JSON",
        "header": "Author Description",
        "path": "_embedded.author[].description"
      }
    ]
  },
  "transforms": [
    {
      "extractText": {
        "inputHeader": "Date Posted (raw)",
        "newColumnHeader": "Date Posted",
        "extractOperation": "ALL_TEXT_BEFORE",
        "extractFrom": "FIRST_INSTANCE_MATCHING_TEXT",
        "valueToFind": {
          "plainText": {
            "value": "T",
            "ignoreCase": false
          }
        }
      }
    },
    {
      "extractText": {
        "inputHeader": "Date Modified (raw)",
        "newColumnHeader": "Date Modified",
        "extractOperation": "ALL_TEXT_BEFORE",
        "extractFrom": "FIRST_INSTANCE_MATCHING_TEXT",
        "valueToFind": {
          "plainText": {
            "value": "T",
            "ignoreCase": false
          }
        }
      }
    }
  ],
  "mappings": [
    {
      "field": "entityId",
      "header": "Entity ID",
      "subfieldPath": []
    },
    {
      "field": "wp_caption",
      "header": "Caption",
      "subfieldPath": []
    },
    {
      "field": "wp_alternativeCaption",
      "header": "Alternative Caption",
      "subfieldPath": []
    },
    {
      "field": "wp_width",
      "header": "Width",
      "subfieldPath": []
    },
    {
      "field": "wp_height",
      "header": "Height",
      "subfieldPath": []
    },
    {
      "field": "wp_sourceURL",
      "header": "Source URL",
      "subfieldPath": []
    },
    {
      "field": "wp_authorLandingPage",
      "header": "Author Landing Page",
      "subfieldPath": []
    },
    {
      "field": "wp_authorDescription",
      "header": "Author Description",
      "subfieldPath": []
    },
    {
      "field": "wp_datePosted",
      "header": "Date Posted",
      "subfieldPath": []
    },
    {
      "field": "wp_author",
      "header": "Author",
      "subfieldPath": []
    },
    {
      "field": "wp_dateModified",
      "header": "Date Modified",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Name",
      "subfieldPath": []
    }
  ],
  "scheduleConfig": {
    "customSchedule": {
      "timeZone": "America/New_York",
      "startDate": "2022-01-31",
      "startTime": "00:00",
      "frequencyType": "DAILY"
    },
    "runMode": "COMPREHENSIVE"
  }
}
