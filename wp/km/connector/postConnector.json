{
  "$id": "wp_postConnector",
  "$schema": "https://schema.yext.com/config/km/connector/v2",
  "displayName": "WordPress Post Connector",
  "entityType": "wp_post",
  "source": {
    "sourceConfig": {
      "apiPullConfig": {
        "requestType": "GET",
        "url": "${{wordpressFullDomain}}/wp-json/wp/v2/posts?_embed",
        "paginationControl": {
          "pageBasedPagination": {
            "pageKey": "page",
            "pageStartValue": 1,
            "totalPages": {
              "key": "X-WP-TotalPages",
              "inHeader": true
            },
            "limitKey": "X-WP-Total",
            "limitValue": 0
          }
        },
        "headers": {},
        "queryParams": {},
        "dataFormat": "JSON"
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "Entity Container",
      "path": "[]"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Entity ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Name",
        "path": "title.rendered"
      },
      {
        "type": "JSON",
        "header": "Content",
        "path": "content.rendered"
      },
      {
        "type": "JSON",
        "header": "Is Sticky",
        "path": "sticky"
      },
      {
        "type": "JSON",
        "header": "Date Posted (raw)",
        "path": "date"
      },
      {
        "type": "JSON",
        "header": "Date Modified (raw)",
        "path": "modified"
      },
      {
        "type": "JSON",
        "header": "Author",
        "path": "_embedded.author[].name"
      },
      {
        "type": "JSON",
        "header": "Author Landing Page",
        "path": "_embedded.author[].link"
      },
      {
        "type": "JSON",
        "header": "Author Description",
        "path": "_embedded.author[].description"
      },
      {
        "type": "JSON",
        "header": "Post Excerpt",
        "path": "excerpt.rendered"
      },
      {
        "type": "JSON",
        "header": "Landing Page URL",
        "path": "link"
      },
      {
        "type": "JSON",
        "header": "Photo Gallery",
        "path": "_embedded.\"wp:featuredmedia\"[].link"
      },
      {
        "type": "JSON",
        "header": "Tags",
        "path": "tags"
      },
      {
        "type": "JSON",
        "header": "Categories",
        "path": "_embedded.\"wp:term\"[].name"
      }
    ]
  },
  "transforms": [
    {
      "extractText": {
        "inputHeader": "Date Posted (raw)",
        "newColumnHeader": "Date Posted",
        "extractOperation": "ALL_TEXT_BEFORE",
        "extractFrom": "FIRST_INSTANCE_MATCHING_TEXT",
        "valueToFind": {
          "plainText": {
            "value": "T",
            "ignoreCase": false
          }
        }
      }
    },
    {
      "extractText": {
        "inputHeader": "Date Modified (raw)",
        "newColumnHeader": "Date Modified",
        "extractOperation": "ALL_TEXT_BEFORE",
        "extractFrom": "FIRST_INSTANCE_MATCHING_TEXT",
        "valueToFind": {
          "plainText": {
            "value": "T",
            "ignoreCase": false
          }
        }
      }
    }
  ],
  "mappings": [
    {
      "field": "photoGallery",
      "header": "Photo Gallery",
      "subfieldPath": [
        {
          "name": "image"
        },
        {
          "name": "url"
        }
      ]
    },
    {
      "field": "landingPageUrl",
      "header": "Landing Page URL",
      "subfieldPath": []
    },
    {
      "field": "wp_categories",
      "header": "Categories",
      "subfieldPath": []
    },
    {
      "field": "wp_postExcerpt",
      "header": "Post Excerpt",
      "subfieldPath": []
    },
    {
      "field": "wp_dateModified",
      "header": "Date Modified",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "entityId",
      "header": "Entity ID",
      "subfieldPath": []
    },
    {
      "field": "wp_content",
      "header": "Content",
      "subfieldPath": []
    },
    {
      "field": "wp_isSticky",
      "header": "Is Sticky",
      "subfieldPath": []
    },
    {
      "field": "wp_authorLandingPage",
      "header": "Author Landing Page",
      "subfieldPath": []
    },
    {
      "field": "wp_authorDescription",
      "header": "Author Description",
      "subfieldPath": []
    },
    {
      "field": "wp_datePosted",
      "header": "Date Posted",
      "subfieldPath": []
    },
    {
      "field": "wp_author",
      "header": "Author",
      "subfieldPath": []
    },
    {
      "field": "wp_tags",
      "header": "Tags",
      "subfieldPath": []
    }
  ],
  "scheduleConfig": {
    "customSchedule": {
      "timeZone": "America/New_York",
      "startDate": "2022-01-31",
      "startTime": "00:00",
      "frequencyType": "DAILY"
    }
}
